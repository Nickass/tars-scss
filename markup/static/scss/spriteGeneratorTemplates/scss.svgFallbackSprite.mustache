{
  // Default options
  'functions': true
}

{{#items}}
  ${{name}}-x: {{px.x}};
  ${{name}}-y: {{px.y}};
  ${{name}}-offset-x: {{px.offset_x}};
  ${{name}}-offset-y: {{px.offset_y}};
  ${{name}}-width: {{px.width}};
  ${{name}}-height: {{px.height}};
  ${{name}}-total-width: {{px.total_width}};
  ${{name}}-total-height: {{px.total_height}};
  ${{name}}-image: '{{{escaped_image}}}';
  ${{name}}: {{px.x}} {{px.y}} {{px.offset_x}} {{px.offset_y}} {{px.width}} {{px.height}} {{px.total_width}} {{px.total_height}} '{{{escaped_image}}}' '{{{name}}}';
{{/items}}

{{#options.functions}}
  @mixin svg-sprite-width($svg-sprite) {
    width: nth($svg-sprite, 5);
  }

  @mixin svg-sprite-height($svg-sprite) {
    height: nth($svg-sprite, 6);
  }

  @mixin svg-sprite-position($svg-sprite) {
    $svg-sprite-offset-x: nth($svg-sprite, 3);
    $svg-sprite-offset-y: nth($svg-sprite, 4);
    background-position: $svg-sprite-offset-x  $svg-sprite-offset-y;
  }

  @mixin svg-sprite-image($svg-sprite) {
    $svg-sprite-image: nth($svg-sprite, 9);
    background-image: url(../img/rasterSvgSprite/#{$svg-sprite-image});
  }
{{/options.functions}}